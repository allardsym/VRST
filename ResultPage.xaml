<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vrct="using:VRCT"
             xmlns:vrct1="clr-namespace:VRCT"
             x:Class="VRCT.ResultPage">

    <VerticalStackLayout
        Spacing="10"
        Padding="20,0"
        VerticalOptions="Fill">


        <HorizontalStackLayout>
            <Label
                Text="Position: "
                SemanticProperties.HeadingLevel="Level1"
                FontSize="18"
                HorizontalOptions="Start" />
            <Label x:Name="Position"
                   FontSize="18" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label
                Text="Hands: "
                SemanticProperties.HeadingLevel="Level1"
                FontSize="18"
                HorizontalOptions="Start" />
            <Label x:Name="Hands"
                   FontSize="18" />
        </HorizontalStackLayout>


        <HorizontalStackLayout>
            <Label
                Text="Time of therapy: "
                SemanticProperties.HeadingLevel="Level1"
                FontSize="18"
                HorizontalOptions="Start" />
            <Label x:Name="Time"
                   FontSize="18" />
        </HorizontalStackLayout>
