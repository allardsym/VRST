                HorizontalOptions="Start" />

            <Line X1="0"
                  Y1="0"
                  X2="2000"
                  Y2="0"
                  Stroke="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}" 
                  HeightRequest="1"/>

